<div class="create-container">
    <h1>Edit video</h1>
    <div class="create-card">

        <form class="input-form" action="/videos/{{video._id}}/edit" method="post" >

        <label for="url">Url</label>

        <input id="url-input" name="url" oninput="handleChange" value="{{video.url}}"/>
        {{#with video.errors.url as |error|}}
        <span class="error">{{error.message}}</span>
        {{/with}}

        <label for="title">Title</label>

        <input id="title-input" name="title" maxlength="50" value="{{video.title}}"/>
        {{#with video.errors.title as |error|}}
        <span class="error">{{error.message}}</span>
        {{/with}}
        
        <label for="description">Description</label>

        <textarea id="description-input" class="video-description" name="description">{{video.description}}</textarea>
        {{#with video.errors.description as |error|}}
        <span class="error">{{error.message}}</span>
        {{/with}}

        <div class="form-navigation">
            <button class="input-button" id="submit-button" type="submit">
            <p>Submit</p>
            </button>
        </div>
        </form>

    </div>
</div>