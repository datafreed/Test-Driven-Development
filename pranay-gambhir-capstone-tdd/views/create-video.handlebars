<div class="create-container">
    <h1>Save a video</h1>
    <div class="create-card">

        <form class="input-form" action="/videos/create" method="post" >

        <label for="url">Url</label>

        <input id="url-input" name="url" value=""/>
        {{#with newVideo.errors.url as |error|}}
        <span class="error">{{error.message}}</span>
        {{/with}}

        <label for="title">Title</label>

        <input id="title-input" name="title" maxlength="50" value=""/>
        {{#with newVideo.errors.title as |error|}}
        <span class="error">{{error.message}}</span>
        {{/with}}
        
        <label for="description">Description</label>

        <textarea id="description-input" class="video-description" name="description"></textarea>
        {{#with newVideo.errors.description as |error|}}
        <span class="error">{{error.message}}</span>
        {{/with}}

        <div class="form-navigation">
            <button class="input-button" id="submit-button" type="submit">
            <p>Submit</p>
            </button>
        </div>
        </form>

    </div>
</div>
